<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-slm-wallet-provisioning"
        version="1.0.0">
    
    <name>SLM Wallet Provisioning</name>
    <description>Apple Wallet and Google Wallet provisioning plugin</description>
    <license>MIT</license>
    <keywords>wallet,apple,google,passkit,payment</keywords>
    
    <repo>https://github.com/sergioguerrero-ux/cordova-plugin-slm-wallet-provisioning.git</repo>
    
    <!-- ⭐ IMPORTANTE: Variable con valor por defecto ⭐ -->
    <preference name="SWIFTVERSION" default="5.0" />
    
    <!-- JavaScript Interface -->
    <js-module src="www/slmWallet.js" name="slmWallet">
        <clobbers target="cordova.plugins.slmWallet" />
    </js-module>
    
    <!-- iOS Platform -->
    <platform name="ios">
        
        <!-- Registrar el plugin -->
        <config-file target="config.xml" parent="/*">
            <feature name="slmWallet">
                <param name="ios-package" value="SLMWalletPlugin" />
            </feature>
        </config-file>
        
        <!-- ⭐ Configurar Swift Version ⭐ -->
        <preference name="SwiftVersion" value="$SWIFTVERSION" />
        
        <!-- Configurar entitlement de PassKit -->
        <config-file target="*-Info.plist" parent="com.apple.developer.payment-pass-provisioning">
            <true/>
        </config-file>
        
        <!-- Archivos del plugin -->
        <source-file src="src/ios/SLMWalletPlugin.swift" />
        <!-- Frameworks -->
        <framework src="PassKit.framework" />
        
    </platform>
    
    <!-- Android Platform -->
    <platform name="android">
        
        <!-- Registrar el plugin -->
        <config-file target="config.xml" parent="/*">
            <feature name="slmWallet">
                <param name="android-package" value="com.slm.wallet.SLMWalletPlugin" />
            </feature>
        </config-file>
        
        <!-- Archivos del plugin -->
        <source-file src="src/android/SLMWalletPlugin.java" 
                     target-dir="src/com/slm/wallet" />
        
        <!-- Frameworks -->
        <framework src="com.google.android.gms:play-services-wallet:19.1.0" />
        <framework src="com.google.android.gms:play-services-base:18.2.0" />
        
    </platform>
    
</plugin>