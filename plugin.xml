<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="cordova-plugin-slm-wallet-provisioning"
        version="1.0.0">
    
    <name>SLM Wallet Provisioning</name>
    <description>Plugin para aprovisionamiento de tarjetas en Apple Pay y Google Pay</description>
    <license>MIT</license>
    <keywords>cordova,wallet,apple pay,google pay,tokenization</keywords>
    
    <engines>
        <engine name="cordova" version=">=9.0.0"/>
    </engines>

    <!-- JavaScript Interface -->
    <js-module src="www/SLMWalletPlugin.js" name="SLMWalletPlugin">
        <clobbers target="cordova.plugins.SLMAppleWallet" />
    </js-module>

    <!-- iOS Platform -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="SLMWalletPlugin">
                <param name="ios-package" value="SLMWalletPlugin"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <!-- Source Files -->
        <source-file src="src/ios/SLMWalletPlugin.swift" />
        
        <!-- Framework Dependencies -->
        <framework src="PassKit.framework" />
        
        <!-- Swift Support -->
        <dependency id="cordova-plugin-add-swift-support" version="2.0.2"/>
        
        <!-- Entitlements -->
        <config-file target="*-Debug.plist" parent="com.apple.developer.payment-pass-provisioning">
            <array>
                <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
            </array>
        </config-file>
        
        <config-file target="*-Release.plist" parent="com.apple.developer.payment-pass-provisioning">
            <array>
                <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
            </array>
        </config-file>
    </platform>

    <!-- Android Platform -->
    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="SLMWalletPlugin">
                <param name="android-package" value="com.slm.wallet.SLMWalletPlugin"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <meta-data
                android:name="com.google.android.gms.wallet.api.enabled"
                android:value="true" />
        </config-file>

        <!-- Source Files -->
        <source-file src="src/android/SLMWalletPlugin.java" 
                     target-dir="src/com/slm/wallet" />

        <!-- Framework Dependencies -->
        <framework src="com.google.android.gms:play-services-wallet:19.1.0" />
        <framework src="com.google.android.gms:play-services-base:18.2.0" />
    </platform>

</plugin>